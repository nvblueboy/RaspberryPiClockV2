<TimeModule>
	size_hint: (1,.5)
	pos_hint: {'top':1}
	RelativeLayout:
		canvas.before:
			Color:
				rgba: 0,0,0,1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			id: TimeLabel
			text: root.timeString
			font_size: '100sp'
			font_name: './fonts/OpenSans/OpenSans-Regular.ttf'
			size: self.size
			pos_hint: {'top':.95}
			size_hint: (1,.4)
		Label:
			id: DateLabel
			text: root.dateString
			font_size: '40sp'
			font_name: './fonts/OpenSans/OpenSans-Light.ttf'
			pos_hint: {'top':.65}
			size_hint: (1,.3)

<WeatherModule>

	BoxLayout:
		canvas.before:
			Color:
				rgba: 0,0,0,1
			Rectangle:
				pos: self.pos
				size: self.size
		orientation: "horizontal"
		Label:
			text: root.currentTempString
			font_size: '80sp'
			font_name: './fonts/OpenSans/OpenSans-Regular.ttf'
		Label:
			text: root.todayForecastString
			font_size: '30sp'
			font_name: './fonts/OpenSans/OpenSans-Light.ttf'
			text_size: self.width, None
			size_hint: 1, None
			height:self.texture_size[1]
			halign: "center"
		Label:
			text: root.descriptionString
			font_size: '30sp'
			font_name: './fonts/OpenSans/OpenSans-Light.ttf'
			text_size: self.width, None
			size_hint: 1, None
			height:self.texture_size[1]
			halign: "center"

<DisneyModule>
	RelativeLayout:
		Label:
			id: RideLabel
			text: root.rideString
			font_size:'30sp'
			font_name:'./fonts/OpenSans/OpenSans-Light.ttf'
			size_hint:(1,.1)
			pos_hint:{'bottom':0}


<RPiCLock>
	FloatLayout:
		orientation:"vertical"
		TimeModule:
			id: TimeMod
		WeatherModule:
			size_hint:(.8,.2)
			pos_hint:{"top":.7, "left":.1, "right":.9}
		DisneyModule