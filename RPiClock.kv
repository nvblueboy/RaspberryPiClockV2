<TimeModule>
	size_hint: (1,.5)
	pos_hint: {'top':1}
	RelativeLayout:
		canvas.before:
			Color:
				rgba: 0,0,0,1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			id: TimeLabel
			text: root.timeString
			font_size: '100sp'
			font_name: './fonts/OpenSans/OpenSans-Regular.ttf'
			size: self.size
			pos_hint: {'top':.95}
			size_hint: (1,.4)
		Label:
			id: DateLabel
			text: root.dateString
			font_size: '40sp'
			font_name: './fonts/OpenSans/OpenSans-Light.ttf'
			pos_hint: {'top':.65}
			size_hint: (1,.3)

<WeatherModule>
	BoxLayout:
		orientation: "horizontal"
		Label:
			text: "98 F"
			font_size: '80sp'
			font_name: './fonts/OpenSans/OpenSans-Regular.ttf'
		Label:
			text: "Sunny, 98/56"
			font_size: '30sp'
			font_name: './fonts/OpenSans/OpenSans-Light.ttf'

<DisneyModule>
	RelativeLayout:
		Label:
			id: RideLabel
			text: root.rideString
			font_size:'30sp'
			font_name:'./fonts/OpenSans/OpenSans-Light.ttf'
			size_hint:(1,.1)
			pos_hint:{'bottom':0}


<RPiCLock>
	FloatLayout:
		orientation:"vertical"
		TimeModule:
			id: TimeMod
		DisneyModule